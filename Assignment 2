import Foundation
// variables
var rock = 0
var scisser = 1
var paper = 2
var user:Int = 0

print("Rock Paper Scisser Game!")
print("Rock = 0 , Paper = 1, Scisser = 2. Choose one above as your answer ")

var com = arc4random_uniform(3)
let respond = readLine()
user = Int(respond!)!

if user == com {
    if user == 0 {
        print("Tie, Both choose Rock ")
    }
    if user == 1 {
        print("Tie, Both choose scissors ")
    }
    if user == 2 {
        print("Tie, Both choose paper ")
    }
}
else if user == 0 {
    if com == 1 {
        print("You lose! You chose Rock, Computer chose Paper")
    }
    if com == 2{
        print("You Win! You chose Rock, Computer chose Scissor ")
    }
}

else if user == 1 {
    if com == 0 {
        print("You lose, You chose Scissor , computer choose rock")
    }
    if com == 2{
        print("You win. You choose Scissor , Computer choose paper ")
    }
}
else if user == 2{
    if com == 0 {
        print("You win! You choose paper, Computer choose rock")
    }
    if com == 1 {
        print("You lose! You choose Paper, Computer choose Scissor ")
    }
}
    if user > 3 {
        print("Valid answer")
}



    

